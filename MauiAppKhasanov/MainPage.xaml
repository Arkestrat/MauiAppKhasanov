<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppKhasanov.MainPage"
             BackgroundColor="#f7f7f7">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Добро пожаловать в Task Manager" 
               FontSize="24" 
               HorizontalOptions="Center" 
               TextColor="#333"/>

        <Button Text="Просмотр задач" 
                BackgroundColor="#4CAF50" 
                TextColor="White" 
                Padding="10, 5" 
                FontSize="18" 
                Clicked="OnViewTasksClicked"/>

        <Button Text="Добавить новую задачу" 
                BackgroundColor="#2196F3" 
                TextColor="White" 
                Padding="10, 5" 
                FontSize="18" 
                Clicked="OnAddTaskClicked"/>

        <Button Text="Статистика" 
                BackgroundColor="#FFC107" 
                TextColor="White" 
                Padding="10, 5" 
                FontSize="18" 
                Clicked="OnStatisticsClicked"/>

        <Button Text="Настройки" 
                BackgroundColor="#9E9E9E" 
                TextColor="White" 
                Padding="10, 5" 
                FontSize="18"  
                Clicked="OnSettingsClicked"/>
    </StackLayout>
</ContentPage>